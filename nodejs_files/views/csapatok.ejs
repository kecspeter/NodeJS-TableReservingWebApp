<%- include('header') %>
<%- include('nav-bar') %>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="page-name">Csapatok</h2>
                <a href="/csapat/new" class="btn btn-primary ">Csapat hozzáadása</a>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Csapat név
                        </th>
                        <th>
                            Csapat méret
                        </th>
                        <th>
                            Legnagyobb szint
                        </th>
                        <th>
                            &nbsp;
                        </th>
                    </tr>
                    <% csapatok.forEach(function(item) {%>
                    <tr class="list-item">
                        <th>
                            <%= item.name %>
                        </th>
                        <th>
                            <%= item.size %> fő
                        </th>
                        <th>
                            lvl <%= item.maxlvl %>
                        </th>
                        <th>
                            <div class="btn-group" role="group" aria-label="edit">
                                <a type="button" class="btn btn-warning" href="/csapat/<%= item.id %>/edit">Módosítás</a>
                                <a type="button" class="btn btn-danger" href="/csapat/<%= item.id %>/delete">Törlés</a>
                              </div>
                        </th>
                    </tr>
                    <% }); %>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>