<%- include('header') %>
<%- include('nav-bar') %>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="page-name">
                    Csapat <%=foundCsapat._id%> törölve
                </h2>
                <form>
                    <div class="form-group">
                        <label for="nev">Csapat név</label>
                        <input type="text" class="form-control" id="nev" name="nev"
                               value="<%=foundCsapat.name%>">
                    </div>
                    <div class="form-group">
                        <label for="size">Csapattagok száma</label>
                        <input type="number" class="form-control" id="size" name="size"
                               value="<%=foundCsapat.size%>">
                    </div>
                    <div class="form-group">
                        <label for="lvl">Legnagyobb elért karakterszint</label>
                        <input type="number" class="form-control" id="lvl" name="lvl"
                               value="<%=foundCsapat.maxlvl%>">
                    </div>
                    <a class="btn btn-link" href="/csapatok">Vissza</a>
                </form>
            </div>
        </div>
    </div>

</div>
<%- include('footer') %>
